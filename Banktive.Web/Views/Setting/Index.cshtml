@model Banktive.Web.Models.SettingModel.IndexSettingViewModel
@{
    ViewData["Title"] = "Settings";
}

<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />


<div class="row">
    <div class="col-6">
        @if(Model.Profile != null)
        {
            <h3>My Info</h3>
            <p class="alert alert-info">
                Name: @(Model.Profile.FirstName+" "+Model.Profile.LastName) <br />
                Tax Id: @Model.Profile.TaxId <br />
                Address line 1: @Model.Profile.AddressLine1 <br />
                Address line 2: @Model.Profile.AddressLine2 <br />
                City/Country/Postal code: @(Model.Profile.City+", "+Model.Profile.Country.Name) (postal code: @Model.Profile.PostalCode) <br />
            </p>
        }
        else
        {
            <p class="alert alert-info">
                You have not updated your personal and business information to use Banktive.
            </p>
        }
        @Html.ActionLink("Update personal info","UpdateProfile","Setting",null, new {@class="btn btn-success"})
    </div>
    <div class="col-6">
        <h3>Manage account</h3>
        <a  class="btn btn-success" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage account</a>
    </div>
</div>
<br /><br />