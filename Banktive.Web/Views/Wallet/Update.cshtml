@model Banktive.Web.Models.WalletModel.UpdateWalletViewModel
@{
    ViewData["Title"] = "Update "+Model.Wallet.Name;
}

<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Back", "Index","Wallet", null, new { @class="btn btn-info" })
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Form.Id)
    <div class="row">
        <div class="col-md-3">
            Alias
        </div>
        <div class="form-group col-md-5">
            <b>@Model.Wallet.Alias</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Name
        </div>
        <div class="form-group col-md-5">
            @Html.TextBoxFor(x => x.Form.Name, new { @class = "form-control" }) <br />
            @Html.ValidationMessageFor(x => x.Form.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            Description
        </div>
        <div class="form-group col-md-5">
            @Html.TextBoxFor(x => x.Form.Description, new { @class = "form-control" }) <br />
            @Html.ValidationMessageFor(x => x.Form.Description)
        </div>
    </div>
    <div class="row mt-5">
        <input type="submit" class="btn btn-primary loadingButton" value="Update" />
    </div>

}