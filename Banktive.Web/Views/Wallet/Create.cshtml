@model Banktive.Web.Models.WalletModel.CreateWalletViewModel
@{
    ViewData["Title"] = "Create a new wallet";
}

<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Back", "Index","Wallet", null, new { @class="btn btn-info" })
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Form.XRPLAddress)
    @Html.HiddenFor(x => x.Form.XRPLSeed)
    <input type="hidden" name="Form.CurrencyId" value="@Constants.Currency_XRP" />
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(x => x.Form.Name)
        </div>
        <div class="form-group col-md-5">
            @Html.TextBoxFor(x => x.Form.Name, new { @class = "form-control" }) <br />
            @Html.ValidationMessageFor(x => x.Form.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(x => x.Form.Description)
        </div>
        <div class="form-group col-md-5">
            @Html.TextBoxFor(x => x.Form.Description, new { @class = "form-control" }) <br />
            @Html.ValidationMessageFor(x => x.Form.Description)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(x => x.Form.Alias)
        </div>
        <div class="form-group col-md-5">
            @Html.TextBoxFor(x => x.Form.Alias, new { @class = "form-control" }) <br />
            @Html.ValidationMessageFor(x => x.Form.Alias)
        </div>
    </div>
    <div class="row mt-5">
        <input type="submit" class="btn btn-primary loadingButton" id="createWalletBtn" disabled="disabled" value="Create wallet" />
    </div>

}

@section Scripts {
    <script src="https://unpkg.com/xrpl@2.0.0/build/xrpl-latest-min.js"></script>
    <script type="text/javascript">
        $(document).ready(async function () {
            await generateFundAddress();
        });
    </script>

}