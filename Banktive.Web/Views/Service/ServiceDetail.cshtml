@model Banktive.Web.Models.ServiceModel.MyServiceViewModel
@{
    ViewData["Title"] = "Service details";
}

<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />


<div class="row">
    <div class="col-md-6">

        <h3>Details</h3>
        Id: @Model.Service.Id <br />
        Name: @Model.Service.Name <br />
        Type: @Model.Service.ServiceType.Name <br />
        Created at: @Model.Service.CreatedAt.ToLocalTime() <br />
        Wallet (to receive money): <a href="@Url.Action("View","Wallet",new {id = Model.Service.WalletId})" target="_blank">@Model.Service.Wallet.Name</a><br />
    </div>
    <div class="col-md-6">
        <h3>Accounts</h3>
        Manage the accounts of your clients/subscribers to receive money in this service. <br />
        @Html.ActionLink("Accounts","ServiceAccounts","Service",new {id = Model.Service.Id }, new {@class="btn btn-secondary"})
    </div>

</div>