@model Banktive.Web.Models.DepositModel.ConfirmTimeDepositViewModel
@{
    ViewData["Title"] = "Approve deposit";
}

<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Form.Id)
    <div class="row">
        <div class="col-md-6">
            <h3>Details of payment</h3>
            Wallet: <b>@Model.Deposit.Wallet.Name</b> <br />
            Amount: <b>@Model.Deposit.Amount</b> <br />
            Date to cash: <b>@Model.Deposit.DateToCash.Value.ToLocalTime()</b> <br />
            Currency: <b>@Model.Deposit.Currency.Name (@Model.Deposit.Currency.Code)</b> <br />
        </div>
        <div class="col-md-6">
            <br />
            Destination: <b>@(Model.Deposit.Destination != null? Model.Deposit.Destination.Name + " ("+Model.Deposit.XRPLDestinationWallet+")":Model.Deposit.XRPLDestinationWallet) </b> <br />
            Creation date: <b>@Model.Deposit.CreatedAt.ToLocalTime()</b> <br />
            Comments: <b>@Model.Deposit.Comments</b> <br />
        </div>
    </div>


    <div class="row">
        <div class="col-md-3">
            <br />
        </div>
        <div class="form-group col-md-5">
            <input type="submit" value="Cancel" class="btn btn-warning loadingButton" name="Form.Cancelled" /> &emsp;
            <input type="submit" class="btn btn-primary loadingButton" value="Approve payment" />
        </div>
    </div>
}