@model Banktive.Web.Models.DestinationModel.IndexDestinationViewModel
@{
    ViewData["Title"] = "My Destinations";
}


<div class="row">
    <div class="col-3">
        <br/>
    </div>
    <div class="col-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-3">
        <br/>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Add new destination", "Add","Destination", null, new { @class="btn btn-info" })
    </div>
</div>
<br />
<div class="row">
    @using(Html.BeginForm(null,null, FormMethod.Get))
    {
        <div class="col-3">
            @Html.LabelFor(x => x.Form.Name) <br/>
            @Html.TextBoxFor(x => x.Form.Name, new {@class="form-control"})
        </div>
        <div class="col-3">
            @Html.LabelFor(x => x.Form.Email) <br/>
            @Html.TextBoxFor(x => x.Form.Email, new {@class="form-control"})
        </div>
        <div class="col-3">
            @Html.LabelFor(x => x.Form.Account) <br/>
            @Html.TextBoxFor(x => x.Form.Account, new {@class="form-control"})
        </div>
        <div class="col-3">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    }
</div>
<br />
<div class="row">
    @if(Model.Destinations.Any())
    {
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Account</th>
                    <th>Email</th>
                    <th>Last updated at</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach(var destination in Model.Destinations)
                {
                    <tr>
                        <th>@destination.Name</th>
                        <td>@destination.Account</td>
                        <td>@destination.Email</td>
                        <td>@destination.LastUpdatedAt</td>
                        <td>
                            @Html.ActionLink("Details","Detail","Destination",new {id = destination.Id}, new {@class="btn btn-secondary"}) <br />
                            @Html.ActionLink("Update/Delete","Edit","Destination",new {id = destination.Id}, new {@class="btn btn-secondary"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                You have no destinations.
            </div>
        </div>
    }
</div>
<br />